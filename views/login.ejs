            </div>
        </div>
    </footer>

    <script>
        const kelas = document.getElementById('kelas');
        const selected = document.cookie.split(';').filter(item => item.trim().startsWith('kelas=')).reduce((prev, current) => current.split('=')[1], '');
        kelas.value = selected;
        kelas.addEventListener('change', function() {
            const selected = kelas.options[kelas.selectedIndex].value;
            document.cookie = `kelas=${selected}`;
        });
    </script>
</body>
</html>