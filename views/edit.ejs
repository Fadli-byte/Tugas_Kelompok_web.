<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data Mahasiswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
            min-height: 100vh;
        }
        .card {
            background-color: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 15px;
        }
        .card-title {
            color: #ff6b6b;
        }
        .btn-primary {
            background-color: #4ecdc4;
            border-color: #4ecdc4;
        }
        .btn-primary:hover {
            background-color: #45b7aa;
            border-color: #45b7aa;
        }
        .form-control:focus {
            border-color: #4ecdc4;
            box-shadow: 0 0 0 0.2rem rgba(78, 205, 196, 0.25);
        }
        .notification {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px;
            background-color: #ff6b6b;
            color: white;
            border-radius: 10px;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" href="#">Mahasiswa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/data">Data</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="card-title text-center mb-4">Edit Data Mahasiswa</h2>
                        <form action="/update/<%= user.id %>" method="post" onsubmit="return confirmSubmission();">
                            <div class="mb-4">
                                <label for="nama" class="form-label">Nama:</label>
                                <input type="text" class="form-control form-control-lg" id="nama" name="name" required value="<%= user.name %>">
                            </div>
                            <div class="mb-4">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control form-control-lg" name="email" id="email" value="<%= user.email %>">
                            </div>
                            <div class="mb-4">
                                <label for="hasilTangkap class="form-label">Hasil Tangkapan:</label>
                                <input type="text" class="form-control form-control-lg" name="hasilTangkap" id="hasilTangkap" value="<%= user.hasilTangkap %>">
                            </div>
                            <div class="mb-4">
                                <label for="jenis" class="form-label">Jenis Tangkapan</label>
                                <input type="text" class="form-control form-control-lg" id="jenis" name="jenis" required value="<%= user.jenis %>">
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Simpan</button>
                            </div>
                        </form>
                        <div class="mt-4">
                            <a href="/delete/<%= user.id %>" class="btn btn-danger btn-lg">Hapus Akun</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="notification" id="notification">Data berhasil disimpan!</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmSubmission() {
            const confirmed = confirm("Apakah Anda yakin ingin menyimpan perubahan?");
            if (confirmed) {
                const notification = document.getElementById('notification');
                notification.style.display = 'block';
                notification.style.opacity = 1;
                
                setTimeout(() => {
                    notification.style.opacity = 0;
                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 500);
                }, 2000);
            }
            return confirmed;
        }
    </script>
</body>
</html>

